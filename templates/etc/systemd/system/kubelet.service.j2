#jinja2: trim_blocks:False
{%- macro k8s_controller_hosts() -%}
{%- for host in groups['k8s_controller'] -%}
https://{{hostvars[host]['ansible_' + k8s_interface].ipv4.address}}:6443{% if not loop.last %},{% endif %}
{%- endfor -%}
{%- endmacro -%}

{%- set x=k8s_worker_kubelet_settings.__setitem__('address',hostvars[inventory_hostname]['ansible_' + k8s_interface].ipv4.address) -%}
{%- set x=k8s_worker_kubelet_settings.__setitem__('node-ip',hostvars[inventory_hostname]['ansible_' + k8s_interface].ipv4.address) -%}
{%- set x=k8s_worker_kubelet_settings.__setitem__('healthz-bind-address',hostvars[inventory_hostname]['ansible_' + k8s_interface].ipv4.address) -%}

[Unit]
Description=Kubernetes Kubelet
Documentation=https://github.com/GoogleCloudPlatform/kubernetes
After=docker.service
Requires=docker.service

[Service]
ExecStart={{k8s_bin_dir}}/kubelet \
{%- for setting in k8s_worker_kubelet_settings|sort %}
  --{{setting}}={{k8s_worker_kubelet_settings[setting]}} {% if not loop.last %}\{% endif %}
{%- endfor %}

Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
